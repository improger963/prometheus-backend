# Prometheus Backend Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=prometheus_backend

# Database behavior settings
DB_SYNCHRONIZE=true   # Set to false in production
DB_LOGGING=false      # Set to true for debugging SQL queries

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# LLM PROVIDER API KEYS (Optional - for AI agent functionality)
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Groq Configuration
GROQ_API_KEY=your-groq-api-key-here

# Mistral AI Configuration
MISTRAL_API_KEY=your-mistral-api-key-here

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_TIMEOUT=300000

# =============================================================================
# TEST DATABASE CONFIGURATION (for testing only)
# =============================================================================
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_NAME=prometheus_test

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate limiting (requests per minute)
RATE_LIMIT_TTL=60000
RATE_LIMIT_REQUESTS=100

# Authentication rate limiting (login attempts)
AUTH_RATE_LIMIT_TTL=900000
AUTH_RATE_LIMIT_REQUESTS=5
