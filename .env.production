# Production Environment Configuration
# This file contains production-ready settings

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=prometheus_user
DB_PASSWORD=secure-production-password
DB_DATABASE=prometheus_production

# IMPORTANT: Set these to false in production
DB_SYNCHRONIZE=false
DB_LOGGING=false

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-very-secure-jwt-secret-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=https://your-frontend-domain.com

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
OPENAI_API_KEY=sk-your-production-openai-key
GROQ_API_KEY=gsk_your-production-groq-key
MISTRAL_API_KEY=your-production-mistral-key
GEMINI_API_KEY=your-production-gemini-key

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_TIMEOUT=600000

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false

# =============================================================================
# SECURITY SETTINGS (Stricter in production)
# =============================================================================
# Rate limiting (requests per minute)
RATE_LIMIT_TTL=60000
RATE_LIMIT_REQUESTS=50

# Authentication rate limiting (login attempts)
AUTH_RATE_LIMIT_TTL=1800000
AUTH_RATE_LIMIT_REQUESTS=3

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000