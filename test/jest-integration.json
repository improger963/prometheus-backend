{
  "displayName": "Integration Tests",
  "testMatch": ["<rootDir>/test/integration/**/*.spec.ts"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "testTimeout": 30000,
  "maxWorkers": 1,
  "setupFilesAfterEnv": ["<rootDir>/test/setup-integration.ts"],
  "forceExit": true,
  "detectOpenHandles": true
}